# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# User
GET		/user/all					controllers.Users.all
GET		/user/:uuid					controllers.Users.get(uuid:String)
GET		/user/:uuid/photo			controllers.Users.photo(uuid:String)
GET		/user/create				controllers.Users.create
GET		/user/:uuid/update			controllers.Users.update(uuid:String)
GET		/user/:uuid/delete			controllers.Users.delete(uuid:String)